<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="DuGu.XFLib.Controls.TabbedImageLabelView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    HorizontalOptions="Fill"
    VerticalOptions="Center">
    <Grid x:Name="grid" RowSpacing="2">

        <Grid.RowDefinitions>

            <RowDefinition Height="25" />
            <RowDefinition />

        </Grid.RowDefinitions>

        <Image
            x:Name="image"
            Grid.Row="0"
            HeightRequest="25"
            HorizontalOptions="Center"
            Source="Icon.png"
            WidthRequest="25" />

        <Label
            x:Name="label"
            Grid.Row="1"
            FontSize="Small"
            HorizontalOptions="Center"
            Text="主页" />

    </Grid>
</ContentView>
